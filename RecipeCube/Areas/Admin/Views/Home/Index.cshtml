@{
    ViewData["Title"] = "總覽";
}

<div class="text-center">
    <h3 class="display-6 animate__animated animate__jello mb-3">Welcome to the RecipeCube Administrator Interface</h3>
    <img id="logo" class="animate__animated" src="~/img/logos/logo.png" style="width:256px; height:256px;" />
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<script>
    const logo = document.getElementById('logo');
    let isBounce = true; // 用來切換動畫

    function restartAnimation() {
        logo.classList.remove('animate__bounce', 'animate__headShake'); // 移除所有動畫類
        void logo.offsetWidth; // 觸發重排
        if (isBounce) {
            logo.classList.add('animate__bounce'); // 添加 bounce 動畫
        } else {
            logo.classList.add('animate__headShake'); // 添加 headShake 動畫
        }
        isBounce = !isBounce; // 切換動畫
    }

    restartAnimation(); // 立即執行第一次動畫
        setInterval(restartAnimation, 1800); // 每1800毫秒執行一次動畫
</script>