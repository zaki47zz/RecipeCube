@{
    ViewData["Title"] = "總覽";
}

<div class="text-center">
    <h3 class="display-6 animate__animated animate__jello my-3">歡迎使用食譜魔方後台管理系統</h3>
    <img id="logo" class="animate__animated" src="~/img/logos/logo.png" style="width:256px; height:256px;" />
</div>

<div class="m-4 p-1" style="border-radius: 20px; background-color: #f5f5f5;">
    <!-- 這裡的背景色可以調整 -->
    <div class="container-fluid py-4">
        <div class="row">
            <!-- 使用者數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">使用者數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["UserCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                    <i class="fa-solid fa-user" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 群組數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">群組數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["GroupCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                    <i class="fa-solid fa-users" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 食材數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">食材數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["IngredientCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                    <i class="fa-solid fa-utensils" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- 食譜數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">食譜數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["RecipeCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                    <i class="fa-solid fa-book-bookmark" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 商品數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">商品數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["ProductCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-danger shadow text-center border-radius-md">
                                    <i class="fa-brands fa-shopify" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 訂單數量 -->
            <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-uppercase font-weight-bold">訂單數量</p>
                                    <h5 class="font-weight-bolder">
                                        @ViewData["OrderCount"]
                                    </h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <div class="icon icon-shape bg-gradient-dark shadow text-center border-radius-md">
                                    <i class="fa-solid fa-file-import" style="font-size: 1.5rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    const logo = document.getElementById('logo');
    let isBounce = true; // 用來切換動畫

    function restartAnimation() {
        logo.classList.remove('animate__bounce', 'animate__headShake'); // 移除所有動畫類
        void logo.offsetWidth; // 觸發重排
        if (isBounce) {
            logo.classList.add('animate__bounce'); // 添加 bounce 動畫
        } else {
            logo.classList.add('animate__headShake'); // 添加 headShake 動畫
        }
        isBounce = !isBounce; // 切換動畫
    }

    restartAnimation(); // 立即執行第一次動畫
        setInterval(restartAnimation, 1800); // 每1800毫秒執行一次動畫
</script>