    <!-- 連結View內script -->
    <script>
        $(document).ready(function () {
            let previousContent = '';  // 全局變量保存之前的局部檢視內容
            // sidebar 的卷軸生成
            var win = navigator.userAgent.indexOf('Win') > -1;
            if (win && document.querySelector('#sidenav-scrollbar')) {
                var options = {
                    damping: '0.5'
                }
                Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
            }

            // 初始化 DataTable，傳入需要篩選的列的索引
            function initializeDataTableWithFilter(columnIndex) {
                new DataTable("table", {
                    initComplete: function () {
                        if (columnIndex !== null) {  // 如果需要篩選
                            var column = this.api().column(columnIndex); // 動態指定要篩選的列
                            // 創建 label 跟 select 元素
                            let label = document.createElement('label');
                            label.innerHTML = '篩選:';
                            label.classList.add('ms-5');
                            let select = document.createElement('select');
                            select.classList.add('form-select', 'form-select-sm', 'ms-1', 'w-25');
                            select.add(new Option('')); // 添加空選項
                            // 監聽用戶選擇變化
                            select.addEventListener('change', function () {
                                column
                                    .search(this.value)
                                    .draw();
                            });
                            // 調整樣式讓元素不換行
                            $("div.dt-length").css('white-space', 'nowrap');
                            $("div.dt-length label").after(label, select);
                            // 使用該列的唯一值來填充選項
                            column.data().unique().sort().each(function (d, j) {
                                select.add(new Option(d));
                            });
                        }
                    },
                    language: {
                        url: "//cdn.datatables.net/plug-ins/2.1.6/i18n/zh-HANT.json",
                        paginate: {
                            first: "«",   // 保持圖示化
                            previous: "‹", // 保持圖示化
                            next: "›",    // 保持圖示化
                            last: "»"     // 保持圖示化
                        },
                    },
                });
            }

            // 當點擊側邊欄時，載入局部檢視
            // let parentId = $("ul.navbar-nav .nav-link").parent().attr('id');
            var controller = ''; // 把控制器變全域變量(因為再下一個function也要用)
            var parentId = '';
            $("ul.navbar-nav .nav-link").on('click', function (e) {
                $("ul.navbar-nav .nav-link").removeClass("active");
                $(this).addClass("active");
                parentId = $(this).parent().attr('id');
                if (parentId !== "Home") {
                    e.preventDefault();
                }
                $('#dynamic-content').html('<div>Loading...</div>');

                // 根據 parentId 設置 controller
                let filterRow = 0;
                switch (parentId) {
                    case 'User': controller = 'Users'; filterRow = null; break;
                    case 'Group': controller = 'Groups'; filterRow = null; break;
                    case 'PreferedFood': controller = ''; filterRow = null; break;
                    case 'ExclusiveFood': controller = ''; filterRow = null; break;
                    case 'Inventory': controller = 'Inventories'; filterRow = null; break;
                    case 'Pantry': controller = 'PantryManagements'; filterRow = null; break;
                    case 'Ingredient': controller = 'Ingredients'; filterRow = 1; break;
                    case 'Recipe': controller = 'Recipes'; filterRow = 3; break;
                    case 'Product': controller = 'Products'; filterRow = null; break;
                    case 'Order': controller = 'Orders'; filterRow = null; break;
                    default:controller = undefined; // 確保有未處理的情況時，controller 會明確為 undefined
                }
                if (parentId !== "Home"  && controller) {
                    $.ajax({
                        url: `/Admin/${controller}/${parentId}IndexPartial`,
                        type: 'GET',
                        success: function (data) {
                            $('#dynamic-content').html(data);
                            initializeDataTableWithFilter(filterRow);
                        },
                        error: function (xhr, status, error) {
                            alert("Error: " + error);
                        }
                    });
                } else {
                    console.error('Controller 未定義或 parentId 為 Home');
                }
            });

            $(document).on('click', '.edit', function () {
                let id = $(this).data('id');
                previousContent = $('#dynamic-content').html();   // 保存當前局部檢視內容
                $.ajax({
                    url: `/Admin/${controller}/EditPartial/` + id,
                    type: 'GET',
                    success: function (data) {
                        $('#editModal .modal-body').html(data);
                        // 初始化 Perfect Scrollbar
                        new PerfectScrollbar('#editModal .modal-body', {
                            damping: 0.5
                        });
                        $('#editModal').modal('show');
                        $.validator.unobtrusive.parse('#editForm');
                    },
                    error: function () {
                        alert('發生錯誤，無法載入編輯表單');
                    }
                });
            });
            // 當 Modal 編輯表單提交時，使用 AJAX 傳送數據
           $(document).on('submit', '#editForm', function (e) {
                e.preventDefault();  // 阻止默認的表單提交行為
                var formData = $(this).serialize();  // 獲取表單數據
                console.log('formData:', formData);  // 確認表單數據中是否包含正確的 RecipeId
                $.ajax({
                    url: $(this).attr('action'),  // 表單的 action URL
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log('AJAX response:', response);  // 在 console 中打印出 AJAX 回應的內容
                        if (response.success) {
                            $('#editModal').modal('hide');
                            $('#dynamic-content').html(previousContent);
                        } else {
                            let errorMessages = response.errors ? response.errors.join('\n') : '無法保存編輯';
                            alert('保存失敗: ' + errorMessages);
                        }
                    },
                    error: function () {
                        alert('發生錯誤，無法保存編輯');
                    }
                });
            });
            // 載入詳細資訊的 AJAX 調用
            $(document).on('click', '.view', function () {
                let id = $(this).data('id');
                $.ajax({
                    url: `/Admin/${controller}/DetailsPartial/` + id,
                    type: 'GET',
                    success: function (data) {
                        $('#detailsModal .modal-body').html(data);
                        $('#detailsModal').modal('show');
                    },
                    error: function () {
                        alert('發生錯誤，無法載入詳細資訊');
                    }
                });
            });
            // 從詳細資訊open editModal
            $(document).on('click', '#openeditModal', function () {
                var recipeId = $(this).data('id');  // 假設你在按鈕中設置了 data-id 屬性

                // 首先關閉 detailsModal
                $('#detailsModal').modal('hide');

                // 然後通過 AJAX 載入編輯表單
                $.ajax({
                    url: `/Admin/${controller}/EditPartial/` + recipeId,  // 請根據實際 URL 路徑調整
                    type: 'GET',
                    success: function (data) {
                        // 將返回的編輯表單載入到 editModal 的 body 中
                        $('#editModal .modal-body').html(data);

                        // 顯示 editModal
                        $('#editModal').modal('show');
                    },
                    error: function () {
                        alert('無法載入編輯表單');
                    }
                });
            });
            // CreateMoadl 
            $(document).on('click', '#openCreateModal', function () {
                $.ajax({
                    url: `/Admin/${controller}/CreatePartial`,
                    type: 'GET',
                    success: function (data) {
                        $('#createModal .modal-body').html(data);  
                        $('#createModal').modal('show');
                        // 初始化局部檢視中的腳本
                        initCreateForm();
                    },
                    error: function () {
                        alert('無法載入建立表單');
                    }
                });
            });
            

            // 當表單提交時
            $(document).on('submit', '#createForm', function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            $('#createModal').modal('hide');
                            location.reload(); // 成功後可以重新加載頁面或刷新表單
                        } else {
                            $('#createModal .modal-body').html(response);
                        }
                    },
                    error: function () {
                        alert('發生錯誤，無法建立');
                    }
                });
            });
            // 監聽 Modal 關閉事件
            $('#editModal').on('hidden.bs.modal', function () {
                // 如果之前有保存的局部檢視內容，則恢復顯示
                if (previousContent) {
                    $('#dynamic-content').html(previousContent);
                }
            });
            // 返回按鈕：關閉 Modal 而不刷新頁面
            $(document).on('click', '#closeModal', function () {
                if ($('#editModal').hasClass('show')) {  // 如果 editModal 正在顯示
                    $('#editModal').modal('hide');  // 隱藏
                }
                if ($('#detailsModal').hasClass('show')) {  // 如果 detailsModal 正在顯示
                    $('#detailsModal').modal('hide');  // 隱藏
                }
                if (previousContent) {
                    $('#dynamic-content').html(previousContent);
                }
            });
            var element = document.querySelector('#some-element');
            if (element) {
                element.classList.add('new-class');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

