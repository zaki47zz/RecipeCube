@model IEnumerable<RecipeCube.Models.Recipe>
@{
    ViewData["Title"] = "食譜檢視";
}

<h1>食譜檢視</h1>

<p class="mt-1">
    <button type="button" class="btn bg-gradient-info"><a asp-action="Create" class="text-white"> 加入新食譜</a></button>
</p>
<table id="table" class="table table-hover w-100">
    <thead>
        <tr>
            <th>動作</th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th style="text-align: left;">
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailedCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RecipeId">編輯</a> <br />
                    <a asp-action="Details" asp-route-id="@item.RecipeId">詳細</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.RecipeId">刪除</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeName)
                </td>
                <td style="text-align: left;">
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetailedCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
    </tbody>
</table>
