@model RecipeCube.Areas.Admin.ViewModels.RecipeIngredientViewModel

<div class="row">
    <div class="col-xl-8 col-lg-9 col-md-10 mx-auto">
        <div class="w-100">
            <dl class="row">
                <div class="mb-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.RecipeId) - @Html.DisplayNameFor(model => model.RecipeName)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.RecipeId) - @Html.DisplayFor(model => model.RecipeName) <!-- 顯示食譜名稱 -->
                    </dd>
                </div>
                <div class="mb-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.IngredientId) - @Html.DisplayNameFor(model => model.IngredientName)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.IngredientId) - @Html.DisplayFor(model => model.IngredientName) <!-- 顯示食材名稱 -->
                    </dd>
                </div>
                <div class="mb-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.Quantity) - @Html.DisplayFor(model => model.Unit)
                    </dd>
                </div>
            </dl>
            <div class="d-flex justify-content-center">
                <form asp-action="Delete" id="deleteForm" asp-route-id="@Model.RecipeIngredientId" method="post">
                    <input type="hidden" asp-for="RecipeIngredientId" />
                    <input type="submit" class="btn btn-danger me-3" value="刪除" />
                    <a href="javascript:void(0)" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">回到列表</a>
                </form>
            </div>
        </div>
    </div>
</div>
