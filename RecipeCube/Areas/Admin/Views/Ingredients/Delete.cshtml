@model RecipeCube.Models.Ingredient

@{
    ViewData["Title"] = "刪除食材";
}

<h3>確定要刪除這個食材嗎?</h3>
<hr />
<div>
    <div class="row">
        <div class="col-xl-8 col-lg-9 col-md-10 mx-auto">
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IngredientName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IngredientName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Synonym)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Synonym)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ExpireDay)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ExpireDay)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Unit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unit)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Gram)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Gram)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Photo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Photo)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IngredientId" />
                <input type="submit" value="刪除" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">回到列表</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @* 改變navbar *@
            $(".sidenav .nav-item a").removeClass("active");
        $("#ingredient a").addClass("active");
    </script>
}