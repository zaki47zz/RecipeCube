@model RecipeCube.Models.Ingredient

@{
    ViewData["Title"] = "食材細節";
}
<div>
    <h3>食材細節</h3>
    <hr />
    <div class="row">
        <div class="col-xl-8 col-lg-9 col-md-10 mx-auto">
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IngredientName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IngredientName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Synonym)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Synonym)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ExpireDay)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ExpireDay)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Unit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unit)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Gram)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Gram)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Photo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Photo)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IngredientId" class="btn btn-primary">編輯</a>
                <a asp-action="Index" class="btn btn-secondary">回到列表</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @* 改變navbar *@
            $(".sidenav .nav-item a").removeClass("active");
        $("#ingredient a").addClass("active");
    </script>
}