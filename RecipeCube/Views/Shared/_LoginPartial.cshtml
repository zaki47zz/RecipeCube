@using Microsoft.AspNetCore.Identity
@using RecipeCube.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <i class="fa fa-user me-sm-1"></i>
            <a class="d-sm-inline d-none" asp-area="Identity" asp-page="/Account/Register">註冊</a>
        </li>

        <li class="nav-item">
            <i class="fas fa-key opacity-6 text-dark me-1 ms-3"></i>
            <a class="d-sm-inline d-none" asp-area="Identity" asp-page="/Account/Login">登入</a>
        </li>
}
</ul>
